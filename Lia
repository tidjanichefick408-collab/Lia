    document.getElementById('year').textContent = new Date().getFullYear();
    function showDetails(name,price){
      const msg = `Produit: ${name}\nPrix: ${price} XAF\n\nSouhaitez-vous commander ?`;
      if(confirm(msg)){
        // ouvre WhatsApp avec message pré-rempli
        const text = encodeURIComponent(`Bonjour%20je%20veux%20commander%20${name}`);
        window.open(`https://wa.me/24174206512?text=${text}`, '_blank');
      }
    }
